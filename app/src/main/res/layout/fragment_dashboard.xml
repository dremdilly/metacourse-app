<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_fragment"
    android:background="#33304FFE">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="#505050"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:backgroundTintMode="src_over"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
        app:layout_constraintEnd_toEndOf="@id/user_avatar"
        app:layout_constraintStart_toStartOf="@id/user_avatar"
        app:layout_constraintTop_toTopOf="@id/user_avatar">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/profile_image"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/user_avatar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose photo"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:layout_gravity="start|center_vertical"/>
    </com.google.android.material.card.MaterialCardView>

    <TableLayout
        android:layout_marginStart="0dp"
        android:id="@+id/info_table"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:layout_width="wrap_content"
        android:stretchColumns="1"
        android:paddingHorizontal="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/add_photo_btn"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_marginVertical="0dp"
            android:layout_marginStart="5dp">

            <LinearLayout
                android:gravity="top"
                android:orientation="vertical"
                android:paddingVertical="1dp"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    android:text="Username"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Hermione Granger"
                    android:id="@+id/fio_string"
                    android:background="@color/white"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>
            </LinearLayout>



        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="#F0F2F5"
            android:backgroundTintMode="src_over"
            android:background="?android:attr/listDivider" />

        <TableRow
            android:layout_marginVertical="0dp"
            android:layout_marginStart="5dp">
            <LinearLayout
                android:gravity="top"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:paddingVertical="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="user@mail.ru"
                    android:id="@+id/email_string"
                    android:background="@color/white"
                    android:textSize="16dp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="#F0F2F5"
            android:backgroundTintMode="src_over"
            android:background="?android:attr/listDivider" />
        <TableRow
            android:layout_marginVertical="0dp"
            android:layout_marginStart="5dp">
            <LinearLayout
                android:gravity="top"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:paddingVertical="1dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Date of birth"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_string"
                    tools:text="09.01.1999"
                    android:text="04.04.2001"
                    android:background="@color/white"
                    android:textSize="16dp"
                    android:textColor="@color/black" />
            </LinearLayout>

        </TableRow>
    </TableLayout>


